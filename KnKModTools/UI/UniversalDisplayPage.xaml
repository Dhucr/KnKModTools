<Page
    x:Class="KnKModTools.UI.UniversalDisplayPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="UniversalDisplayPage"
    d:DesignHeight="450"
    d:DesignWidth="800"
    Loaded="Page_Loaded"
    mc:Ignorable="d">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" MinWidth="200" />
            <!--  节点类型  -->
            <ColumnDefinition Width="5" />
            <ColumnDefinition Width="10*" />
        </Grid.ColumnDefinitions>
        <GridSplitter
            Grid.Column="1"
            Width="5"
            VerticalAlignment="Stretch"
            Background="#DDD" />
        <!--  节点类型列表  -->
        <ListBox
            x:Name="NodeList"
            Grid.Column="0"
            Margin="5"
            FontFamily="{StaticResource GlobalFont}"
            FontSize="{StaticResource GlobalFontSize}"
            ScrollViewer.VerticalScrollBarVisibility="Auto"
            SelectionChanged="NodeList_SelectionChanged">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock
                        Margin="5,2"
                        FontFamily="{StaticResource GlobalFont}"
                        FontSize="{StaticResource GlobalFontSize}"
                        Text="{Binding DisplayName}" />
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <DataGrid
            x:Name="DataPool"
            Grid.Column="2"
            Margin="5"
            AutoGenerateColumns="False"
            CanUserAddRows="False"
            CanUserResizeRows="False"
            FontFamily="{StaticResource GlobalFont}"
            FontSize="{StaticResource GlobalFontSize}"
            PreviewKeyDown="DataPool_PreviewKeyDown">
            <DataGrid.ColumnHeaderStyle>
                <StaticResource ResourceKey="MainFontC" />
            </DataGrid.ColumnHeaderStyle>
        </DataGrid>
    </Grid>
</Page>