<Window
    x:Class="KnKModTools.UI.TBLWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:hc="https://handyorg.github.io/handycontrol"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="window"
    Title="{StaticResource MainTitle}"
    Width="1400"
    Height="800"
    Icon="/Resources/Icons/knk.ico"
    KeyDown="Window_KeyDown"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d" Closed="Window_Closed">
    <Grid>
        <!--  定义三行布局：菜单栏、工具栏、工作区  -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <!--  菜单栏高度自适应  -->
            <RowDefinition Height="Auto" />
            <!--  工具栏高度自适应  -->
            <RowDefinition Height="*" />
            <!--  工作区占据剩余空间  -->
        </Grid.RowDefinitions>

        <!--  菜单栏（使用HandyControls样式）  -->
        <Menu
            Grid.Row="0"
            hc:TitleElement.Background="#F0F0F0"
            hc:TitleElement.Foreground="#333333"
            FontFamily="{StaticResource GlobalFont}"
            FontSize="{StaticResource GlobalFontSize}">
            <MenuItem Header="{StaticResource File}">
                <MenuItem Click="Setting_MenuItem_Click" Header="{StaticResource Setting}" />
            </MenuItem>
            <MenuItem Header="{StaticResource Help}">
                <MenuItem Click="About_MenuItem_Click" Header="{StaticResource About}" />
            </MenuItem>
        </Menu>

        <!--  工具栏（使用HandyControls的按钮样式）  -->
        <ToolBarTray Grid.Row="1">
            <ToolBar hc:TitleElement.Background="#F8F8F8">
                <Button
                    x:Name="SaveBtn"
                    hc:IconElement.Geometry="{StaticResource SaveGeometry}"
                    Click="SaveBtn_Click"
                    Style="{StaticResource ButtonIcon}" />
                <Separator />
                <Button
                    x:Name="LoadScpBtn"
                    hc:IconElement.Geometry="{StaticResource DecompileGeometry}"
                    Click="LoadScpBtn_Click"
                    Style="{StaticResource ButtonIcon}" />
                <Separator />
            </ToolBar>
        </ToolBarTray>

        <!--  工作区（使用HandyControls的TabControl）  -->
        <hc:TabControl
            Grid.Row="2"
            Margin="5"
            IsAnimationEnabled="True"
            IsDraggable="True">
            <hc:TabItem Header="{StaticResource TBLEdit}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <!--  文件列表列（添加最小宽度限制）  -->
                        <ColumnDefinition Width="1*" MinWidth="200" />
                        <!--  分隔条列  -->
                        <ColumnDefinition Width="5" />
                        <!--  内容区列（添加最小宽度限制）  -->
                        <ColumnDefinition Width="10*" MinWidth="300" />
                    </Grid.ColumnDefinitions>
                    <!--  增强型分隔条  -->
                    <GridSplitter
                        Grid.Column="1"
                        Width="5"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        Background="{DynamicResource {x:Static SystemColors.ControlDarkBrushKey}}" />
                    <!--  文件列表区域  -->
                    <ListBox
                        x:Name="FileList"
                        Grid.Column="0"
                        Margin="5"
                        FontFamily="{StaticResource GlobalFont}"
                        FontSize="{StaticResource GlobalFontSize}"
                        ScrollViewer.VerticalScrollBarVisibility="Auto"
                        SelectionChanged="FileList_SelectionChanged">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock
                                    Margin="5,2"
                                    FontFamily="{StaticResource GlobalFont}"
                                    FontSize="{StaticResource GlobalFontSize}"
                                    Text="{Binding}" />
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                    <!--  动态内容区域  -->
                    <Frame
                        x:Name="WorkFrame"
                        Grid.Column="2"
                        Margin="5"
                        NavigationUIVisibility="Hidden"
                        SnapsToDevicePixels="True"
                        UseLayoutRounding="True" />
                </Grid>
            </hc:TabItem>

            <!--  保留日志面板  -->
            <hc:TabItem Header="{StaticResource LogPanel}">
                <TextBox
                    FontFamily="{StaticResource GlobalFont}"
                    FontSize="{StaticResource GlobalFontSize}"
                    IsReadOnly="True"
                    TextWrapping="Wrap"
                    VerticalScrollBarVisibility="Auto" />
            </hc:TabItem>
            <!--  测试面板  -->
            <hc:TabItem Header="{StaticResource DebugPanel}" Loaded="TabItem_Loaded">
                <Grid>
                    <!--  定义网格列  -->
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <!--  左侧固定区域  -->
                        <ColumnDefinition Width="*" />
                        <!--  中间自适应区域  -->
                        <ColumnDefinition Width="Auto" />
                        <!--  右侧列表区域  -->
                        <ColumnDefinition Width="Auto" />
                        <!--  最右侧列表区域  -->
                    </Grid.ColumnDefinitions>

                    <!--  定义网格行  -->
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <!--  顶部输入区域  -->
                        <RowDefinition Height="Auto" />
                        <!--  第二个输入行  -->
                        <RowDefinition Height="*" />
                        <!--  主内容区域  -->
                        <RowDefinition Height="Auto" />
                        <!--  底部按钮区域  -->
                    </Grid.RowDefinitions>
                    <!--  左侧功能区  -->
                    <StackPanel
                        Grid.RowSpan="3"
                        Grid.Column="0"
                        Margin="5">
                        <!--  数值转换区域  -->
                        <StackPanel Margin="0,5">
                            <TextBox
                                x:Name="IndexTB"
                                MinWidth="100"
                                Margin="0,5"
                                FontFamily="{StaticResource GlobalFont}"
                                FontSize="{StaticResource GlobalFontSize}"
                                Text="0" />
                            <TextBox
                                x:Name="CountTB"
                                MinWidth="100"
                                Margin="0,5"
                                FontFamily="{StaticResource GlobalFont}"
                                FontSize="{StaticResource GlobalFontSize}"
                                Text="0" />
                            <Button
                                Margin="0,5"
                                Click="Button_Click"
                                Content="{StaticResource OK}"
                                FontFamily="{StaticResource GlobalFont}"
                                FontSize="{StaticResource GlobalFontSize}" />
                        </StackPanel>
                        <!--  字节转换区域  -->
                        <StackPanel Margin="0,10">
                            <TextBox
                                x:Name="ByteTB"
                                MinWidth="100"
                                Margin="0,5"
                                FontFamily="{StaticResource GlobalFont}"
                                FontSize="{StaticResource GlobalFontSize}" />
                            <TextBox
                                x:Name="FloatTB"
                                MinWidth="100"
                                Margin="0,5"
                                FontFamily="{StaticResource GlobalFont}"
                                FontSize="{StaticResource GlobalFontSize}" />
                            <Button
                                Margin="0,5"
                                Click="StringToSingle_Click"
                                Content="{StaticResource OK}"
                                FontFamily="{StaticResource GlobalFont}"
                                FontSize="{StaticResource GlobalFontSize}" />
                        </StackPanel>
                    </StackPanel>
                    <!--  主内容区域  -->
                    <RichTextBox
                        Grid.Row="2"
                        Grid.Column="1"
                        Margin="5">
                        <FlowDocument>
                            <Paragraph>
                                <Run x:Name="RunText" Text="RichTextBox" />
                            </Paragraph>
                        </FlowDocument>
                    </RichTextBox>
                    <!--  右侧列表  -->
                    <ListBox
                        x:Name="HeaderList"
                        Grid.RowSpan="3"
                        Grid.Column="2"
                        MinWidth="200"
                        Margin="5"
                        d:ItemsSource="{d:SampleData ItemCount=5}"
                        FontFamily="{StaticResource GlobalFont}"
                        FontSize="{StaticResource GlobalFontSize}"
                        SelectionChanged="HeaderList_SelectionChanged" />
                    <ListBox
                        x:Name="TBList"
                        Grid.RowSpan="3"
                        Grid.Column="3"
                        MinWidth="200"
                        Margin="5"
                        d:ItemsSource="{d:SampleData ItemCount=5}"
                        FontFamily="{StaticResource GlobalFont}"
                        FontSize="{StaticResource GlobalFontSize}"
                        SelectionChanged="TBList_SelectionChanged" />
                    <!--  底部保存按钮  -->
                    <Button
                        Grid.Row="3"
                        Grid.Column="0"
                        Margin="5"
                        Click="Button_Click_1"
                        Content="{StaticResource Test}"
                        FontFamily="{StaticResource GlobalFont}"
                        FontSize="{StaticResource GlobalFontSize}" />
                </Grid>
            </hc:TabItem>
        </hc:TabControl>
    </Grid>
</Window>