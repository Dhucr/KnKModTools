<Window
    x:Class="KnKModTools.UI.AboutWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:hc="https://handyorg.github.io/handycontrol"
    xmlns:local="clr-namespace:KnKModTools.UI"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="About"
    Width="400"
    Height="250"
    Icon="/Resources/Icons/knk.ico"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="4*" />
            <RowDefinition Height="3*" />
            <RowDefinition Height="3*" />
        </Grid.RowDefinitions>
        <Button
            Grid.Row="1"
            Height="42"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            hc:IconElement.Geometry="{StaticResource GithubGeometry}"
            Click="GoGithub_Click"
            Content="Project Github"
            FontFamily="{StaticResource GlobalFont}"
            FontSize="{StaticResource GlobalFontSize}" />
        <Button
            Grid.Row="2"
            Height="42"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            hc:IconElement.Geometry="{StaticResource GithubGeometry}"
            Click="GoRGithub_Click"
            Content="Project Reference Github"
            FontFamily="{StaticResource GlobalFont}"
            FontSize="{StaticResource GlobalFontSize}" />
        <hc:OutlineText
            x:Name="ShowOT"
            Grid.Row="0"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Fill="#FFB626FF"
            FontFamily="{StaticResource GlobalFont}"
            FontSize="21"
            Stroke="#FFFF2727"
            TextWrapping="Wrap" />
    </Grid>
</Window>