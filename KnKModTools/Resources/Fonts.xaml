<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:system="clr-namespace:System;assembly=netstandard">

    <Style x:Key="MainFontR" TargetType="DataGridRow">
        <Setter Property="FontFamily" Value="pack://application:,,,/Fonts/#Noto Sans SC Regular" />
        <Setter Property="FontSize" Value="14" />
    </Style>

    <Style x:Key="MainFontC" TargetType="DataGridColumnHeader">
        <Setter Property="FontFamily" Value="pack://application:,,,/Fonts/#Noto Sans SC Light" />
        <Setter Property="FontSize" Value="16" />
        <Setter Property="HorizontalContentAlignment" Value="Center" />
    </Style>

    <FontFamily x:Key="GlobalFont">pack://application:,,,/Fonts/#Noto Sans SC Regular</FontFamily>
    <system:Double x:Key="GlobalFontSize">14</system:Double>
</ResourceDictionary>